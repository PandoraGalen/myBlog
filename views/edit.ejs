<%- include header %>

    <div class="content">
        <div class="posts">
            <article class="post">
                <div class="post-inner">
                   <h2 class="title" style="text-align:center;">编辑文章</h2>
                    <form method="post">
                        <label>标题：</label>
                        <br />
                        <input type="text" name="title" value="<%= post.title %>" disabled="disabled" /><br />

                        <label>标签：</label>
                        <input type="text" name="tag1" value="<%= post.tags[0] %>" disabled="disabled" />
                        <input type="text" name="tag2" value="<%= post.tags[1] %>" disabled="disabled" />
                        <input type="text" name="tag3" value="<%= post.tags[2] %>" disabled="disabled" />
                        <br>

                        <label>正文：</label>
                        <br />
                        <textarea name="post" rows="20" cols="100"><%= post.post %></textarea><br />

                        <input type="submit" value="保存修改" />
                    </form>
                </div>
            </article>
        </div>
    </div>
<%- include footer %>
