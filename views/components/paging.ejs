<section class="content paging">
    <div class="paging-inner section-inner">
        <div class="paging-wrap">
          <% if (!isFirstPage) { %>
            <span class="prePage paging-btn"><a title="上一页" href="?p=<%= page-1 %>">上一页</a></span>
          <% } %>

          <span class="indicator">
            <%= page %> / <%= total %>
          </span>

          <% if (!isLastPage) { %>
            <span class="nextPage paging-btn"><a title="下一页" href="?p=<%= page+1 %>">下一页</a></span>
          <% } %>
        </div>
    </div>
</section>
