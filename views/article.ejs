<%- include header %>

<div class="content">
    <div class="posts">
            <article class="post">
                <div class="post-inner">
                    <div class="post-header">
                        <h2 class="post-title" style="text-align: center">
                              <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a>
                        </h2>
                        <div class="post-meta">
                            <span>作者: <a href="/u/<%= post.name %>"> <%= post.name %> </a></span>
                            <span>日期: <%= post.time.minute %></span>
                            <span class="tags">标签:
                                <% post.tags.forEach(function (tag, index) { %>
                                    <% if (tag) { %>
                                        <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
                                    <% } %>
                                <% }) %>
                            </span>
                        </div>
                    </div>
                    <div class="post-content">
                          <%- post.post %>
                    </div>

                    <div class="post-bottom">
                        <span class="left">
                            <span>阅读(<%= post.pv %>)</span>
                            <span>评论(<%= post.comments.length %>)</span>
                        </span>
                        <span class="right">
                          <% if (user && (user.name == post.name)) { %>
                            <span><a class="edit" href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">编辑</a></span>
                            <span><a class="edit" href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">删除</a></span>
                          <% } %>
                        </span>
                    </div>
                </div>
            </article>
    </div>
</div>

<%- include components/comment %>

<%- include footer %>
