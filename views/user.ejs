<%- include header %>

    <div class="content">
        <div class="posts">
            <% posts.forEach(function (post, index) { %>
                <article class="post">
                    <div class="post-inner">
                        <div class="post-header">
                            <h2 class="post-title">
                                  <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a>
                            </h2>
                            <div class="post-meta">
                                <span>作者: <a href="/u/<%= post.name %>"> <%= post.name %> </a></span>
                                <span>日期: <%= post.time.minute %></span>
                            </div>
                        </div>
                        <div class="post-content">
                            <%- post.post %>
                        </div>
                    </div>
                </article>
            <% }) %>
        </div>
    </div>

    <%- include components/paging %>

<%- include footer %>
